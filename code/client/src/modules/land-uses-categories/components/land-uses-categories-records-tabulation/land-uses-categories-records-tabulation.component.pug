            th.col-sm-2.text-center.align-middle(scope='col')
              span.d-flex.flex-row-reverse
                | Actions
        ng-container(body='')
          tr(*ngfor='let landUseCategory of landUsesCategoriesTableService.landUsesCategories$ | async')
            td.text-center.align-middle
              | {{landUseCategory.pos}}
            td.text-left.align-middle
              ngb-highlight([result]='landUseCategory.name', [term]='landUsesCategoriesTableService.searchTerm')
            td.text-center.align-middle
              span.d-flex.flex-row-reverse
                sb-button(action='delete', entity='LandUseCategory', id='{{landUseCategory.id}}', (delete)='onDeleteLandUseCategory($event)')
                sb-button(action='update', entity='LandUseCategory', id='{{landUseCategory.id}}', (update)='onUpdateLandUseCategory($event)')
