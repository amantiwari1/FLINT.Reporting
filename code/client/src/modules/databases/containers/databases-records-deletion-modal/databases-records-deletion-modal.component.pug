sb-modal
  ng-container(title='')
    | Delete Database Record
  ng-container(body)
    sb-databases-records-deletion(id='{{id}}', (succeeded)='onSucceeded()', (failed)='onFailed($event)')
    ng-container(*ngif='(status$ | async) === "deleting"')
      sb-message-overlay(activity='deleting', status='deleting')
    ng-container(*ngif='(status$ | async) === "succeeded"')
      sb-message-overlay(activity='deleting', status='succeeded')
    ng-container(*ngif='(status$ | async) === "failed"')
      sb-message-overlay(activity='deleting', status='failed')
    ng-container(*ngif='(status$ | async) === "retrying"')
      sb-countdown-overlay(crosshead='Retrying in ', (completed)='onDelete()')
  ng-container(footer='')
    ng-container(*ngif='(status$ | async) === "new"')
      sb-button(action='yes', entity='Database', (yes)='onDelete()')
      sb-button(action='no', entity='Database', guarded='false', (no)='onQuit()')
    ng-container(*ngif='(status$ | async) === "deleting"')
      sb-button(action='yes', entity='Database', disabled='true')
      sb-button(action='no', entity='Database', disabled='true')
    ng-container(*ngif='(status$ | async) === "succeeded"')
      sb-button(action='yes', entity='Database', disabled='true')
      sb-button(action='no', entity='Database', disabled='true')
    ng-container(*ngif='(status$ | async) === "failed"')
      sb-button(action='yes', entity='Database', (yes)='onRetry()')
      sb-button(action='no', entity='Database', guarded='false', (no)='onQuit()')
    ng-container(*ngif='(status$ | async) === "retrying"')
      sb-button(action='yes', entity='Database', disabled='true')
      sb-button(action='no', entity='Database', disabled='true')
