sb-modal
  ng-container(title='')
    | Create Filter Record
  ng-container(body)
    sb-filters-records-creation((succeeded)='onSucceeded()', (failed)='onFailed($event)')
    ng-container(*ngif='(status$ | async) === "saving"')
      sb-message-overlay(filter='creating', status='saving')
    ng-container(*ngif='(status$ | async) === "succeeded"')
      sb-message-overlay(filter='creating', status='succeeded')
    ng-container(*ngif='(status$ | async) === "failed"')
      sb-message-overlay(filter='creating', status='failed')
    ng-container(*ngif='(status$ | async) === "retrying"')
      sb-countdown-overlay(crosshead='Retrying in ', (completed)='onSave()')
  ng-container(footer='')
    ng-container(*ngif='(status$ | async) === "new"')
      sb-button(action='save', entity='Filter', (save)='onSave()')
    ng-container(*ngif='(status$ | async) === "saving"')
      sb-button(action='save', entity='Filter', disabled='true')
    ng-container(*ngif='(status$ | async) === "invalid"')
      sb-button(action='save', entity='Filter', (save)='onSave()')
    ng-container(*ngif='(status$ | async) === "succeeded"')
      sb-button(action='yes', entity='Filter', guarded='false', (yes)='onContinue()')
      sb-button(action='no', entity='Filter', guarded='false', (no)='onQuit()')
    ng-container(*ngif='(status$ | async) === "failed"')
      sb-button(action='yes', entity='Filter', (yes)='onRetry()')
      sb-button(action='no', entity='Filter', guarded='false', (no)='onQuit()')
    ng-container(*ngif='(status$ | async) === "retrying"')
      sb-button(action='yes', entity='Filter', disabled='true')
      sb-button(action='no', entity='Filter', disabled='true')
